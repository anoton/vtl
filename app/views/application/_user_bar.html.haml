.user_bar
/= link_to "Home", root_path, :class => 'brand'
%ul.nav
  - if user_signed_in?
    %li
      = link_to(t(".logout"), destroy_user_session_path, :method=>'delete')
    %li
      =link_to(t(".edit account"), edit_account_path(current_user.account))  
    %li
      = gravatar_image_tag(current_user.email  , :class=>"avatar_mini" , :gravatar=>{:size=>30})  
  - else
    %li
      = link_to(t(".login"), new_user_session_path)
    %li
      = link_to(t(".sign up"), new_user_registration_path)
