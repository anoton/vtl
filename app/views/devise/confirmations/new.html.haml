%h2 Resend confirmation instructions
= simple_form_for(resource, :as => resource_name, :url => confirmation_path(resource_name), :html => { :method => :post , :class=>"form-horizontal" }) do |f|
  = f.error_notification
  %fieldset
    = f.input :email, :required => true
  .form-actions
    = f.button :submit, t(".Resend_confirmation_instructions") , :class=>"btn btn-success"
= render :partial => "devise/shared/links"
