- model_class = WantOption.new.class
.page-header
  %h1=t '.title', :default => model_class.model_name.human.pluralize
%table.table.table-condensed
  %thead
    %tr
      %th= model_class.human_attribute_name(:id)
      %th= model_class.human_attribute_name(:name)
      %th=t '.actions', :default => t("helpers.actions")
  %tbody
    - @want_options.each do |want_option|
      %tr
        %td= link_to want_option.id, want_option_path(want_option)
        %td= want_option.name
        %td
          - if current_user && current_user.admin
            = link_to t('.edit', :default => t("helpers.links.edit")), edit_want_option_path(want_option), :class => 'btn btn-mini'
            = link_to t('.destroy', :default => t("helpers.links.destroy")), want_option_path(want_option), :method => :delete, :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')), :class => 'btn btn-mini btn-danger'
- if current_user && current_user.admin
  = link_to t('.new', :default => t("helpers.links.new")), new_want_option_path, :class => 'btn btn-primary'
