- model_class = @want_option.class
.page-header
  %h1=t '.title', :default => model_class.model_name.human

%p
  %strong= model_class.human_attribute_name(:name) + ':'
  %br
  = @want_option.name

- if current_user && current_user.admin
  .form-actions
    = link_to t('.back', :default => t("helpers.links.back")), want_options_path, :class => 'btn'
    = link_to t('.edit', :default => t("helpers.links.edit")), edit_want_option_path(@want_option), :class => 'btn'
    = link_to t('.destroy', :default => t("helpers.links.destroy")), want_option_path(@want_option), :method => "delete", :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')), :class => 'btn btn-danger'
